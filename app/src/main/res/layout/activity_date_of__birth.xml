<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Date_of_Birth">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/fillin" android:layout_marginTop="108dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="96dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="dd/mm/yyyy"/>
    <TextView
            android:text="Enter Your Date of Birth"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/textView" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/fillin"
            android:textSize="20sp" android:layout_marginEnd="28dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="152dp" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/ages"/>
    <Button
            android:text="Go Back to Main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_to_main" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="352dp"
            android:layout_height="57dp"
            android:id="@+id/ages"
            android:text="  "
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>