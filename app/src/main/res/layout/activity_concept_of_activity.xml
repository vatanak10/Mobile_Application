<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".concept_of_activity">

    <Button
            android:text="GO TO INTENT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/intent" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:onClick="goToIntent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/word" android:layout_marginTop="208dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="96dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Enter any word"/>
    <Button
            android:text="Go TO BUNDLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bundle" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="172dp" android:onClick="startBundle"/>
    <Button
            android:text="GO TO ACTION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/action" android:layout_marginTop="96dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:onClick="startActivity"/>
    <Button
            android:text="GO TO IMAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image" android:layout_marginStart="172dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="96dp" android:onClick="startImage"/>
    <Button
            android:text="GO HOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gohome" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="60dp"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toBottomOf="parent"
            android:onClick="goHome"/>
    <Button
            android:text="GO TO CALCULATOR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calculator" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="188dp" android:onClick="startCalculator"/>
    <EditText
            android:layout_width="119dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginTop="288dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="num1"/>
    <EditText
            android:layout_width="119dp"
            android:layout_height="43dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/num2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/num1" android:layout_marginStart="8dp" android:hint="num2"
            android:layout_marginTop="288dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.389"/>
    <TextView
            android:text="RESULT"
            android:layout_width="wrap_content"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:id="@+id/finalRes" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="148dp"
            android:layout_marginTop="392dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>