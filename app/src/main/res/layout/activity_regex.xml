<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Regex">

    <Button
            android:text="GO TO CHECKBOX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="GO TO SEEKBAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekbar" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="212dp"/>
    <Button
            android:text="GO TO RADIOBUTTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radiobutton" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="156dp" app:layout_constraintTop_toTopOf="parent"/>
    <Switch
            android:text="Switch    "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/the_switch" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="236dp"

    />
    <ScrollView
            android:layout_width="395dp"
            android:layout_height="511dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/scroll">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="423dp"
                tools:layout_editor_absoluteX="181dp" android:id="@+id/textScroll"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>