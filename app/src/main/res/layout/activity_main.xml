<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="45dp"
            android:layout_height="29dp"
            android:id="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="108dp"
            android:layout_marginBottom="372dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
    />
    <TextView
            android:layout_width="42dp"
            android:layout_height="39dp"
            android:id="@+id/textView4"
            android:layout_marginBottom="416dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:layout_marginEnd="108dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Consonants: "
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="84dp"
            android:layout_marginBottom="380dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"/>
    <TextView
            android:text="Vowels: "
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/textView"
            android:layout_marginBottom="428dp" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            android:layout_marginStart="84dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="144dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/letter"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.417" android:layout_marginBottom="508dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="LETTERS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/letter" android:layout_marginBottom="264dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="160dp"
    />
    <Button
            android:text="Go to DoB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dob" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Go to Toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toast" app:layout_constraintStart_toStartOf="@+id/dob" android:layout_marginStart="116dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Go to Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="28dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="GO TO LIFECYCLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cycle" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="startActivityForResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forresult"
            android:layout_marginBottom="80dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="184dp"
            android:onClick="forResult"/>
    <Button
            android:text="GO TO GESTURE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gesture" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"/>
    <Button
            android:text="GO TO CHECKBOX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkbox" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="184dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>