        <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:onClick="play"/>
        <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:onClick="play"/>
        <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:onClick="play"/>
    </LinearLayout>

</LinearLayout>