<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Linear_Layout"
        android:orientation="vertical"
        android:background="@drawable/raw_pixels"

        >

    <TextView
            android:text="Username"
            android:fontFamily="sans-serif-black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="30sp"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal" android:id="@+id/user"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/edit_user"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="sans-serif-black"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp" android:id="@+id/pass"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/edit_pass"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
        <Button
                android:text="SUBMIT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/submit"/>
        <Button
                android:text="RESET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/reset"/>
    </LinearLayout>
</LinearLayout>